{% block body %}
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
<div class="container" style="background-color: #f2f2f2; border: 2px solid black;margin-top: 2%">
    <div name="tete" style="text-align: center; border: 2px solid black; background-color: #c9d9f2; margin-top: 1%">
        <a href="{{path('ajoutFormation')}}" style="color:black">ajout des formations</a>
        <a> . </a>
        <a href="{{path('app_inscrit')}}" style="color:black">valider les formations</a>
        <a> . </a>
        <a href="{{path('app_for_supp')}}" style="color:black">retour à la liste des formations</a></br></br>
    </div>
    Vous êtes dans la liste des formations de plus de 4 heure: </br></br>
    {% if (message) %}
        {{ message }}
    {% endif %}
    {% for formation in ensFormation %}
        {% if (formation.nbreHeaures >= 4) %}
            Date de début: <b>{{ formation.dateDebut|date("m/d/y") }}</b><br>
            nombre heure : {{ formation.nbreHeaures }}</br>
            departement : {{ formation.departement }}</br>
            <a href="{{path('app_sup' , {'id': formation.id})}}">supprimer</a></br></br>
        {% endif %}
    {% endfor %}

</div>
{% endblock %}
